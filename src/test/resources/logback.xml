<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Console Appender -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- MODIFIED PATTERN HERE -->
            <pattern>CKA API Automation Framework - %d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Suppress INFO logs from TestNG's internal utilities -->
    <logger name="org.testng.internal.Utils" level="WARN" />
    <logger name="org.testng" level="INFO" />

    <!-- Root Logger Configuration -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>